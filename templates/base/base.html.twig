<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% if title is defined %}{{ title }}{% else %}Durf ledenportaal{% endif %}</title>
    <link rel="shortcut icon" type="image/jpg" href="/favicon.png">
    <script src="https://kit.fontawesome.com/3471b6556e.js" crossorigin="anonymous"></script>

    {% block css %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
              crossorigin="anonymous">
    {% endblock %}
</head>
<body>
{{ include('base/navbar.html.twig') }}

{# alert block #}
<div class="container">
    <br>
    <div class="row">
        <div class="col-sm mx-auto">
            {% block flashes %}
                {% for msg in app.session.flashBag.get('error') %}
                    <div class="alert alert-danger" role="alert">
                        <strong>Error: </strong> {{ msg|raw }}
                    </div>
                {% endfor %}
                {% for msg in app.session.flashBag.get('success') %}
                    <div class="alert alert-success">
                        <strong>Success: </strong> {{ msg|raw }}
                    </div>
                {% endfor %}
            {% endblock %}
        </div>
    </div>
</div>

{# body blocks #}
{% block content %}
{% endblock %}

{# javascript block #}
{% block js %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
{% endblock %}
</body>
</html>
