{% extends 'base/base.html.twig' %}

{% set title %}Event index{% endset %}

{% block body %}
    {% if is_granted('ROLE_EVENT_ADMIN') %}
        <a class="btn btn-success" href="{{ path('event_event_new') }}">Create new</a>
    {% endif %}

    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>When</th>
            <th>Deadline</th>
            <th>Location</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.name }}</td>
                <td>{{ event.startDate ? event.startDate|date('Y-m-d H:i') : '' }}</td>
                <td>{{ event.subscriptionDeadline ? event.subscriptionDeadline|date('Y-m-d') : '' }}</td>
                <td>{{ event.location }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('event_event_show', {'id': event.id}) }}">Show</a>
                    {% if is_granted('ROLE_EVENT_ADMIN') %}
                        <a class="btn btn-warning" href="{{ path('event_event_edit', {'id': event.id}) }}">Edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
